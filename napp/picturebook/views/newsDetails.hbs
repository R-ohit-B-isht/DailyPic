<!-- views/newsDetails.hbs -->

<div class="container">
  <h4><a href="{{newsItem.url}}" >{{newsItem.title}}</a></h4>
  <p><a href="{{newsItem.hackerNewsUrl}}">Hacker News URL : {{newsItem.hackerNewsUrl}} </a></p>

  <!-- Display other details -->

  <h5>Comments:</h5>
  <ul class="comments">
    {{#each comments}}
      {{> commentRecursive}}
    {{/each}}
  </ul>
</div>

<!-- partials/commentRecursive.hbs -->

{{! Recursive partial to display comments }}
{{#each comments}}
  <li class="comment">
    <div class="user">
      <span class="user-icon">ðŸ‘¤</span> {{this.by}}
    </div>
    <div class="text">{{{this.text}}}</div>
    {{#if this.kids}}
      <ul class="nested-comments">
        {{> commentRecursive comments=this.kids}}
      </ul>
    {{/if}}
  </li>
{{/each}}

